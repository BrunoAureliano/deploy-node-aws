{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<h3>New Post</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/new" method="post">
            <label for="title" class="mt-2">Title: </label>
                <input type="text" name="title" class="form-control mt-2">
            <label for="slug" class="mt-2">Slug: </label>
                <input type="text" name="slug" class="form-control mt-2">
            <label for="description" class="mt-2">Description: </label>
                <input type="text" name="description" class="form-control mt-2">
            <label for="content" class="mt-2">Content: </label>
                <textarea name="content" class="form-control mt-2"></textarea>
            <label for="category" class="mt-2">Category: </label>
                <select name="category" class="form-control mt-2">
                    {{#each categories}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                        <option value="0">No category registered</option>
                    {{/each}}
                </select>
            <br>
            <button class="btn btn-success mt-3" type="submit">Create Post</button>
        </form>
    </div>
</div>