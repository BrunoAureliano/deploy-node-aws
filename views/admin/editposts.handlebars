{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<h3>Edit Post</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/edit" method="post">
            <input type="hidden" name="id" value="{{posts._id}}">
            <label for="title" class="mt-2">Title: </label>
                <input type="text" name="title" class="form-control mt-2" value="{{posts.title}}">
            <label for="slug" class="mt-2">Slug: </label>
                <input type="text" name="slug" class="form-control mt-2" value="{{posts.slug}}">
            <label for="description" class="mt-2">Description: </label>
                <input type="text" name="description" class="form-control mt-2" value="{{posts.description}}">
            <label for="content" class="mt-2">Content: </label>
                <textarea name="content" class="form-control mt-2"> {{posts.content}} </textarea>
            <label for="category" class="mt-2">Category: </label>
                <select name="category" class="form-control mt-2">
                    {{#each categories}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                        <option value="0">No category registered</option>
                    {{/each}}
                </select>
            <br>
            <a href="/admin/posts/edit/{{_id}}">
                <button class="btn btn-success mt-3" type="submit">Edit Post</button>
            </a>
        </form>
    </div>
</div>