<h2>List of Posts: </h2>
<hr>
<a href="/admin/posts/add">
    <button class="btn btn-success">New Post</button>
</a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>Description: {{description}}</p>
            <br>            
            <small>Slug: {{slug}}</small>
            <br>
            <small>Content: {{content}}</small>
            <br>
            <small>Creation Date: {{date}}</small>
            <br>
            <small>Category: {{category.name}}</small>
            <br>
            <a href="/admin/posts/edit/{{_id}}">
                <button class="btn btn-success mt-3">Edit Post</button>
            </a>
            <form action="/admin/posts/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <p>No posts registered!</p>
{{/each}}